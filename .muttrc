# Configurazione minimale Mutt <- Gmail/IMAP

# Identità per From:
set from = "lmezzalira@gmail.com"
set realname = "Syslac"

# Autenticazione:
source ~/.mutt_auth

# Folders:

set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Bozze"
set trash = "imaps://imap.gmail.com/[Gmail]/Trash"

set smtp_url = "smtp://lmezzalira@smtp.gmail.com:587/"

# Local folders:

set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates

# Shortcut convenienti per cambio folder

bind editor <space> noop
macro index gi "<change-folder>=INBOX<enter>" "Go to inbox"
macro index gs "<change-folder>=[Gmail]/Posta inviata<enter>" "Go to Sent Mail"
macro index gd "<change-folder>=[Gmail]/Bozze<enter>" "Go to drafts"
macro index gu "<change-folder>=UGO<enter>" "Go to drafts"
macro index gl "<change-folder>=MontelLUG<enter>" "Go to drafts"
macro index gm "<change-folder>=Math<enter>" "Go to drafts"

# tips per evitare rotture

set move = no  #Stop asking to "move read messages to mbox"!
set imap_keepalive = 900

set editor='vim + -c "set textwidth=72" -c "set wrap" -c "set nocp" -c "?^$"'

# mail in HTML e follow_link con urlview

auto_view text/html
macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'
